%h1 Listing boards

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Date
      %th Place
      %th User
      %th
      %th
      %th

  %tbody
    - @boards.each do |board|
      %tr
        %td= board.title
        %td= board.content
        %td= board.date
        %td= board.place
        %td= board.user_id
        %td= link_to 'Show', board
        %td= link_to 'Edit', edit_board_path(board)
        %td= link_to 'Destroy', board, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Board', new_board_path
